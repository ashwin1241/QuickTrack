<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:backgroundTint="#e6e6e6">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fur"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/furn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fur"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/fur"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/qtyfur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/furn"
            android:layout_toRightOf="@id/fur"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Quantity available:"
            android:textSize="16dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/initqtyfur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/qtyfur"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/qtyfur"/>

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Make changes:"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/qtyfur"
            android:layout_toRightOf="@id/fur"/>

        <EditText
            android:id="@+id/qtedfur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/qtyfur"
            android:layout_below="@id/qtyfur"
            android:textSize="16dp" />

        <Button
            android:id="@+id/updtfur"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="Apply"
            android:layout_toRightOf="@id/shrfur"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/qtedfur"/>

        <Button
            android:id="@+id/shrfur"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:text="Share"
            android:layout_toRightOf="@id/fur"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/qtedfur"/>

        <Button
            android:id="@+id/remfur"
            android:layout_width="200dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="Remove Item"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/fur"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>